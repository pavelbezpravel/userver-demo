root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
tab_width = 4

[{*.cpp, *.hpp, *.h}]
indent_style = space
indent_size = 4

[{*.md, *.sh}]
indent_style = space
indent_size = 2

[{*.yaml, *.yml}]
indent_style = space
indent_size = 2
